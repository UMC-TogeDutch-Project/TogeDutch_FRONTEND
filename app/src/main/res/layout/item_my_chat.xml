<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/my_chat_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_chat_box"
        android:text="안녕하세요!"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxWidth="220dp"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/my_image_iv"
        android:layout_width="200dp"
        android:background="@drawable/my_chat_box"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/my_image_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="8sp"
        android:textAlignment="textEnd"
        android:layout_marginTop="3.83dp"
        android:paddingBottom="4.59dp"
        app:layout_constraintEnd_toEndOf="@id/my_image_iv"
        app:layout_constraintTop_toBottomOf="@id/my_image_iv"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/my_chat_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="8sp"
        android:textAlignment="textEnd"
        android:layout_marginTop="3.83dp"
        android:paddingBottom="4.59dp"
        app:layout_constraintEnd_toEndOf="@id/my_chat_iv"
        app:layout_constraintTop_toBottomOf="@id/my_chat_iv"/>
</androidx.constraintlayout.widget.ConstraintLayout>