<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.SignUpAlarmKeywordActivity"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btnBack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/sign_up_btn_backwork_icon"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="16dp"

        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="지역을 설정해보세요"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <FrameLayout
        android:id="@+id/frameLayoutEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        >

        <EditText
            android:id="@+id/etInputAlarmKeyword"
            android:layout_width="370dp"
            android:layout_height="41dp"
            android:hint="시/ 구/ 동"
            android:paddingLeft="17dp"
            android:background="@drawable/sign_up_alram__edit_text_box"
            android:singleLine="true"
            />

        <Button
            android:id="@+id/btnInputRegion"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/sign_up_tabler_icon_search"

            />

    </FrameLayout>

    <TextView
        android:id="@+id/tvRegionCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text=" "
        android:textColor="#C854FF"
        android:layout_marginStart="20dp"
        />

    <View
        android:id="@+id/tableLayoutEdit"
        android:layout_width="match_parent"
        android:layout_height="369dp"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:src="@drawable/sign_up_status_bar_region"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="17dp"
        />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="230dp"
        android:layout_height="43dp"
        android:text="다음"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:background="@drawable/sign_up_btn_background_blue_color"
        />



</LinearLayout>