<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="79dp"
    android:background="@drawable/button_round_13"
    android:backgroundTint="#66D9D9D9"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="12dp">


    <ImageView
        android:id="@+id/res_img"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:background="@drawable/button_round_8"
        android:backgroundTint="@color/grey_2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/res_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:text="제목"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="11dp"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@id/res_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/res_icon1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="11dp"
        android:src="@drawable/ic_map_2"
        app:layout_constraintStart_toEndOf="@id/res_img"
        app:layout_constraintTop_toBottomOf="@+id/res_title" />

    <TextView
        android:id="@+id/res_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:text="장소"
        android:includeFontPadding="false"
        android:textColor="@color/main_color"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/res_icon1"
        app:layout_constraintTop_toBottomOf="@+id/res_title" />


    <ImageView
        android:id="@+id/res_icon2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/tabler_icon_category"
        app:layout_constraintStart_toEndOf="@id/res_img"
        app:layout_constraintTop_toBottomOf="@+id/res_icon1" />

    <TextView
        android:id="@+id/res_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="7dp"
        android:text="카테고리"
        android:includeFontPadding="false"
        android:textColor="@color/main_color"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/res_icon2"
        app:layout_constraintTop_toBottomOf="@+id/res_place" />






</androidx.constraintlayout.widget.ConstraintLayout>