<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/chat_dialog_iv"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:background="@drawable/chat_square_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/sqare_background_blue_round"
        android:drawableLeft="@drawable/ic_baseline_send_24"
        android:paddingLeft="12.74dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_message"
        app:layout_constraintStart_toEndOf="@id/edit_message"
        app:layout_constraintTop_toTopOf="@+id/edit_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/close_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/tabler_icon_chatting_close"
        app:layout_constraintStart_toStartOf="@id/edit_message"
        app:layout_constraintTop_toTopOf="@id/edit_message"
        android:layout_marginLeft="2dp"
        />

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="273.94dp"
        android:layout_height="38dp"
        android:background="@drawable/square_background_white_round"
        android:hint="메시지를 입력하세요"
        android:paddingLeft="37dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_submit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_photo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_photo"
        app:layout_constraintStart_toStartOf="@+id/edit_message"
        app:layout_constraintTop_toBottomOf="@id/edit_message"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35.41dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_camera"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_camera"
        app:layout_constraintTop_toTopOf="@id/btn_photo"
        app:layout_constraintLeft_toRightOf="@id/btn_photo"
        android:layout_marginLeft="31dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_location"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_location"
        app:layout_constraintTop_toTopOf="@id/btn_camera"
        app:layout_constraintLeft_toRightOf="@id/btn_camera"
        android:layout_marginLeft="31dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_calendar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_calendar"
        app:layout_constraintTop_toTopOf="@id/btn_location"
        app:layout_constraintLeft_toRightOf="@id/btn_location"
        android:layout_marginLeft="31dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>