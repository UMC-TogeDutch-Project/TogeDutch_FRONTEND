<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.SignUpActivity">

    <ImageView
        android:id="@+id/tvTitle"
        android:layout_width="74dp"
        android:layout_height="27dp"
        android:src="@drawable/sign_up_register_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="49dp"
        />

    <TextView
        android:id="@+id/tvInputName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름을 입력해주세요"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="23dp"
        android:layout_marginTop="25dp"
        />
    <!--margin51dp -->

    <EditText
        android:id="@+id/etInputName"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:layout_constraintTop_toBottomOf="@id/tvInputName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/sign_up_edit_text_box"
        android:gravity="center"
        />




    <TextView
        android:id="@+id/tvInputEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        app:layout_constraintTop_toBottomOf="@id/etInputName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="23dp"
        android:layout_marginTop="12dp"
        />

    <EditText
        android:id="@+id/etInputEmail"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:layout_constraintTop_toBottomOf="@id/tvInputEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/sign_up_edit_text_box"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tvInputPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        app:layout_constraintTop_toBottomOf="@id/etInputEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="23dp"
        android:layout_marginTop="47dp"
        />

    <EditText
        android:id="@+id/etInputPassword"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:layout_constraintTop_toBottomOf="@id/tvInputPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/sign_up_edit_text_box"
        android:gravity="center"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/tvInputPasswordCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        app:layout_constraintTop_toBottomOf="@id/etInputPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="23dp"
        android:layout_marginTop="12dp"
        />

    <EditText
        android:id="@+id/etInputPasswordCheck"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:layout_constraintTop_toBottomOf="@id/tvInputPasswordCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/sign_up_edit_text_box"
        android:gravity="center"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/tvInputPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호"
        app:layout_constraintTop_toBottomOf="@id/etInputPasswordCheck"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="23dp"
        android:layout_marginTop="47dp"
        />

    <EditText
        android:id="@+id/etInputPhoneNumber"
        android:layout_width="250dp"
        android:layout_height="37dp"
        app:layout_constraintTop_toBottomOf="@id/tvInputPhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"

        android:background="@drawable/sign_up_edit_text_box"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnSendToCheckMsg"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:text="문자 인증"
        android:textColor="#FFFFFF"
        android:background="@drawable/sign_up_btn_backgound_blue_color"
        app:layout_constraintTop_toBottomOf="@id/tvInputPhoneNumber"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="23dp"
        />

    <TextView
        android:id="@+id/tvInputCertificationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호"
        app:layout_constraintTop_toBottomOf="@id/etInputPhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="23dp"
        android:layout_marginTop="12dp"
        />

    <EditText
        android:id="@+id/etInputCertificationNumber"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:layout_constraintTop_toBottomOf="@id/tvInputCertificationNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/sign_up_edit_text_box"
        android:gravity="center"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="230dp"
        android:layout_height="43dp"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:background="@drawable/sign_up_btn_backgound_blue_color"
        app:layout_constraintTop_toBottomOf="@id/etInputCertificationNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>