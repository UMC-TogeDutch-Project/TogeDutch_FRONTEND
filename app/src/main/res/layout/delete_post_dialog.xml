<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="316dp"
    android:layout_height="152dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/square_background_light_gray_round"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해당 공고를 삭제하시겠습니까?"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:textFontWeight="500"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_ok_btn"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:background="@drawable/sqare_background_blue_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/delete_cancel_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="24dp"
        android:text="확인"
        android:textAlignment="center"
        android:gravity="center"

        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_cancel_btn"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:background="@drawable/sqare_background_blue_round"
        app:layout_constraintLeft_toRightOf="@id/delete_ok_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="30dp"
        android:text="취소"
        android:textAlignment="center"
        android:gravity="center"

        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        />


</androidx.constraintlayout.widget.ConstraintLayout>