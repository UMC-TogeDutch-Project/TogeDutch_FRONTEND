<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/your_profile_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_profile_icn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/your_name_txt"
        android:text="유승연"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/your_chat_iv"
        app:layout_constraintLeft_toRightOf="@id/your_profile_img"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/your_chat_iv"
        android:layout_width="wrap_content"
        android:layout_height="39.59dp"
        android:background="@drawable/your_chat_box"
        android:text="안녕하세요^^"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_profile_img"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/your_chat_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12시 16분"
        android:textSize="8sp"
        android:textAlignment="textStart"
        android:layout_marginTop="3.83dp"
        android:paddingBottom="4.59dp"
        app:layout_constraintStart_toStartOf="@id/your_chat_iv"
        app:layout_constraintTop_toBottomOf="@id/your_chat_iv"/>
</androidx.constraintlayout.widget.ConstraintLayout>