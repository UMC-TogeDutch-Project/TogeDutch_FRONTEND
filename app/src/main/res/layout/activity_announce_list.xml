<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <include
        android:id="@+id/include"
        layout="@layout/actionbar_announce_list_top" />

    <LinearLayout
        android:id="@+id/search_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/button_round_11"
            android:backgroundTint="#1F767680"
            android:drawableLeft="@drawable/ic_search"
            android:drawableRight="@drawable/ic_mic"
            android:drawablePadding="7dp"
            android:hint="검색"
            android:paddingLeft="7dp"
            android:paddingRight="7dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            app:layout_constraintBottom_toTopOf="@+id/recycler_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/button_round_8"
            android:backgroundTint="@color/grey_4"
            android:drawableRight="@drawable/ic_triangle"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:paddingRight="10dp"

            android:text="최신순"
            android:textSize="13dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_post"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:listitem="@layout/announce_recyclerview_item">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>