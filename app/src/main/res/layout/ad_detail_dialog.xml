<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="685dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/square_background_white_round">

    <ImageButton
        android:id="@+id/dlg_ad_btn_close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_close_dlg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>
    
    <TextView
        android:id="@+id/dlg_ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="엽떡 장위점"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="21dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanskr_black"
        android:includeFontPadding="false"
        />
    
    <ImageView
        android:id="@+id/dlg_ad_image"
        android:layout_width="278dp"
        android:layout_height="289dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/square_background_gray_round"
        android:layout_marginTop="83dp"/>
    
    <ImageView
        android:id="@+id/icon_location"
        android:layout_width="17dp"
        android:layout_height="16dp"
        android:background="@drawable/icon_ad_location"
        app:layout_constraintTop_toBottomOf="@id/dlg_ad_image"
        app:layout_constraintStart_toStartOf="@id/dlg_ad_image"
        app:layout_constraintEnd_toStartOf="@id/dlg_ad_location"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    
    <TextView
        android:id="@+id/dlg_ad_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울특별시 성북구 화랑로 13길 28 1층 오매떡"
        android:textSize="10sp"
        android:fontFamily="@font/notosanskr_black"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/icon_location"
        app:layout_constraintBottom_toBottomOf="@id/icon_location"
        app:layout_constraintStart_toEndOf="@id/icon_location"
        android:layout_marginStart="3dp"
        />


    <ImageView
        android:id="@+id/icon_menu"
        android:layout_width="17dp"
        android:layout_height="16dp"
        android:background="@drawable/icon_ad_star"
        app:layout_constraintTop_toBottomOf="@id/dlg_ad_location"
        app:layout_constraintStart_toStartOf="@id/icon_location"
        app:layout_constraintEnd_toStartOf="@id/dlg_ad_menu"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/dlg_ad_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메인 메뉴"
        android:textSize="10sp"
        android:fontFamily="@font/notosanskr_black"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/icon_menu"
        app:layout_constraintBottom_toBottomOf="@id/icon_menu"
        app:layout_constraintStart_toEndOf="@id/icon_menu"
        android:layout_marginStart="3dp"/>

    <ImageView
        android:id="@+id/icon_link"
        android:layout_width="17dp"
        android:layout_height="16dp"
        android:background="@drawable/icon_ad_category"
        app:layout_constraintTop_toBottomOf="@id/dlg_ad_menu"
        app:layout_constraintStart_toStartOf="@id/icon_location"
        app:layout_constraintEnd_toStartOf="@id/dlg_ad_link"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/dlg_ad_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://baemin.me/3l6SrlD_3"
        android:textSize="10sp"
        android:fontFamily="@font/notosanskr_black"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/icon_link"
        app:layout_constraintBottom_toBottomOf="@id/icon_link"
        app:layout_constraintStart_toEndOf="@id/icon_link"
        android:layout_marginStart="3dp"/>
    
    <TextView
        android:id="@+id/dlg_ad_request"
        android:layout_width="278dp"
        android:layout_height="199dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="464dp"
        android:elevation="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="top"
        android:text="요청 내용"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:background="@drawable/square_background_light_gray_round"
        />




</androidx.constraintlayout.widget.ConstraintLayout>