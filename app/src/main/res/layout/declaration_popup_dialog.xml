<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="316dp"
    android:layout_height="484dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/square_backgound_light_blue_round"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고 사유"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanskr_bold"
        android:textFontWeight="700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/declaration_reason_txt" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/close_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/ic_baseline_close_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="19dp"
        android:layout_marginRight="15dp"/>



   <EditText
       android:id="@+id/declaration_reason_txt"
        android:layout_width="282dp"
        android:layout_height="347dp"
        android:background="@drawable/square_background_white_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="51dp"

        android:text=""
        android:hint="신고 사유를 적어주세요 (필수 사항)"
        android:textColorHint="#737373"
        android:textColor="@color/black"
        android:textSize="12sp"

        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="top"
        />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/send_btn"
        android:layout_width="279dp"
        android:layout_height="47dp"
        android:background="@drawable/sqare_background_blue_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:text="신고 접수"
        android:textAlignment="center"
        android:gravity="center"

        android:textSize="18sp"
        android:textColor="@color/white"
        />



</androidx.constraintlayout.widget.ConstraintLayout>