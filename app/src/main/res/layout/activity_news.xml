<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsActivity">

    <include
        android:id="@+id/topView"
        layout="@layout/actionbar_inner_page_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <Button
        android:id="@+id/btnUpLoad"
        android:layout_width="205dp"
        android:layout_height="35dp"
        android:background="@drawable/news_btn_background_all_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMate"
        android:text="공고 업로드"
        android:textColor="#557AFF"
        android:textStyle="bold"
        android:layout_marginTop="72dp"
        />

    <ImageView
        android:id="@+id/ivUnderBarUpLoad"
        android:layout_width="205dp"
        android:layout_height="3dp"
        android:background="#557AFF"
        app:layout_constraintTop_toBottomOf="@id/btnUpLoad"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/btnMate"
        android:layout_width="205dp"
        android:layout_height="35dp"
        android:background="@drawable/news_btn_background_all_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnUpLoad"
        android:text="메이트 신청 현황"
        android:textColor="#66000000"
        android:textStyle="bold"
        android:layout_marginTop="72dp"
        />

    <ImageView
        android:id="@+id/ivUnderBarMate"
        android:layout_width="205dp"
        android:layout_height="3dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnMate"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <FrameLayout
        android:id="@+id/container_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toBottomOf="@id/ivUnderBarUpLoad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>