<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="2023년 01월 16일 오후 10시 27분"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="29dp"
        />

    <ImageView
        android:id="@+id/ivMainImage"
        android:layout_width="71dp"
        android:layout_height="71dp"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="26dp"
        android:src="@drawable/main_rv_item_image"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버거킹 같이 시키실 분 구합니다!!"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toEndOf="@id/ivMainImage"
        android:layout_marginStart="23dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tvUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="* * *님이 메이트를 신청했습니다."
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toEndOf="@id/ivMainImage"
        android:layout_marginTop="7dp"
        android:layout_marginStart="23dp"
        />

    <Button
        android:id="@+id/btnAcept"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:text="수락"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvUserId"
        app:layout_constraintStart_toEndOf="@id/ivMainImage"
        android:layout_marginStart="23dp"
        android:background="@drawable/sign_up_btn_background_blue_color"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/btnReject"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:text="거절"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvUserId"
        app:layout_constraintStart_toEndOf="@id/btnAcept"
        android:layout_marginStart="12dp"
        android:background="@drawable/sign_up_btn_background_purple_color"
        android:layout_marginTop="5dp"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#40000000"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>